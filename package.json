{
  "name": "versions-checker",
  "version": "0.0.2",
  "description": "check installed versions of node, npm, yarn, and git",
  "main": "bin/version-checker.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sridharmallela/versions-checker.git"
  },
  "keywords": [
    "NODE",
    "NPM",
    "YARN",
    "GIT",
    "VERSION",
    "CHECKER"
  ],
  "author": "Sridhar Mallela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sridharmallela/versions-checker/issues"
  },
  "homepage": "https://github.com/sridharmallela/versions-checker#readme",
  "directories": {
    "bin": "bin"
  },
  "files": [
    "bin/versions-checker",
    "bin/versions.js",
    "README.md"
  ],
  "bin": {
    "versions-checker": "./bin/versions-checker"
  },
  "config": {
    "unsafe-perm": true,
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 1500,
      "helpMessage": "use karma style git commit pattern"
    }
  },
  "scripts": {
    "check-versions": "echo \"Do Nothing\"",
    "print-banner": "print-cli -b -font standard -c green \"versions-checker\"",
    "commitmsg": "./node_modules/.bin/validate-commit-msg",
    "clean": "./node_modules/.bin/rimraf coverage .nyc_output",
    "lint": "./node_modules/.bin/eslint .",
    "uglify-src": "./node_modules/.bin/uglifyjs ./lib/versions.js -c -m --warn -o ./bin/versions.js",
    "uglify-cli": "./node_modules/.bin/uglifyjs ./lib/cli.js -c -m --warn -o ./bin/versions-checker",
    "test-unit": "./node_modules/.bin/nyc --reporter=text --reporter=lcov mocha test",
    "uglify": "npm run uglify-src && npm run uglify-cli",
    "build": "npm run check-versions && npm run lint && npm run uglify",
    "test": "npm run check-versions && npm run lint && npm run uglify && npm run clean && npm run test-unit && npm run print-banner",
    "precommit": "npm test",
    "preversion": "npm test",
    "prepublishOnly": "npm test",
    "help": "npm run check-versions && npm run lint && npm run uglify && npm run clean && npm run test-unit && node ./bin/versions-checker --help"
  },
  "devDependencies": {
    "chai": "^4.1.1",
    "eslint": "^4.5.0",
    "husky": "^0.14.3",
    "mocha": "^3.5.0",
    "nyc": "^11.1.0",
    "path": "^0.12.7",
    "print-cli": "^1.4.1",
    "rimraf": "^2.6.1",
    "uglify-js": "^3.0.28",
    "validate-commit-message": "^3.0.1"
  },
  "dependencies": {
    "colors": "^1.1.2",
    "commander": "^2.11.0"
  }
}
